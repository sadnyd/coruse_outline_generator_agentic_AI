# Environment Configuration for Course Outline Generator

# DO NOT COMMIT THIS FILE - Contains sensitive API keys
# Add .env to .gitignore to prevent accidental commits

# =============== LLM Configuration ===============
# Which LLM provider to use: openai, anthropic, gemini, mistral
LLM_PROVIDER=mistral
LLM_MODEL=mistral-large-latest
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=30

# OpenAI Configuration
OPENAI_API_KEY=

# Anthropic Configuration
ANTHROPIC_API_KEY=

# Google Gemini Configuration
GEMINI_API_KEY=

# Mistral AI Configuration
MISTRAL_API_KEY=

# =============== Web Search Configuration ===============
# Tavily (primary search provider - recommended)
TAVILY_API_KEY=
# DuckDuckGo (always available, no key needed)
DUCKDUCKGO_ENABLED=true

# SerpAPI (optional fallback)
SERPAPI_API_KEY=
# =============== Database Configuration ===============
# ChromaDB path (local vector store)
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=curricula

# =============== Session Management ===============
# Session TTL in minutes
SESSION_TTL_MINUTES=30
# Max session size in MB
MAX_SESSION_SIZE_MB=100
# Temp directory for uploads
TEMP_DIR=/tmp/course_ai_sessions

# =============== Validator Configuration ===============
# Score threshold (0-100) - outline must score >= this
VALIDATOR_THRESHOLD=75
# Max number of regeneration attempts
MAX_REGENERATION_ATTEMPTS=3

# =============== Logging & Observability ===============
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Enable PII filtering in logs
PII_FILTERING_ENABLED=true

# =============== Environment ===============
# Environment: development, staging, production
ENVIRONMENT=development

# =============== Streamlit Configuration ===============
STREAMLIT_PAGE_ICON=ðŸ“š
STREAMLIT_LAYOUT=wide
STREAMLIT_SERVER_PORT=8501
STREAMLIT_CLIENT_SHOWERRORDETAILS=true
